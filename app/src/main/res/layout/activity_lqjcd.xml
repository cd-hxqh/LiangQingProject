<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_main"></include>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <TableRow android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/lqjc_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dimen_5"
                    android:drawableTop="@drawable/ic_lqjc"
                    android:gravity="center"
                    android:text="@string/lqjc_text"></TextView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/sbwsjc_layout_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/sbwsjc_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dimen_5"
                    android:drawableTop="@drawable/ic_sbwsjc"
                    android:gravity="center"
                    android:text="@string/sbssjc_text"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/zyxcjc_layout_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/zyxcjc_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dimen_5"
                    android:drawableTop="@drawable/ic_zyxcjc"
                    android:gravity="center"
                    android:text="@string/aqjc_text"></TextView>

            </LinearLayout>


        </TableRow>


    </TableLayout>

</LinearLayout>
