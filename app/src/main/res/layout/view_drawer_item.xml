<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_10">

    <ImageView
        android:id="@+id/drawer_title_id"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chlq" />

    <TextView
        android:id="@+id/drawer_textview_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimens_5"
        android:layout_toRightOf="@+id/drawer_title_id"
        android:text="@string/cclqbzd_text"
        android:textColor="@color/light_black"
        android:textSize="18sp" />

</RelativeLayout>